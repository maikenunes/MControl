<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
            android:text="Olá usuário!\n\nVocê irá controlar o fluxo de presensas através desta plataforma.\n\nSeja Bem-Vindo!!"
            android:id="@+id/tInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lista Pessoas"
            android:id="@+id/bPessoa"
            android:onClick="listaPessoas"
            android:layout_below="@+id/tInicial"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="61dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lista Eventos"
            android:id="@+id/bEvento"
            android:onClick="listaEventos"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bPessoa"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Presenças"
            android:id="@+id/bPresenca"
            android:onClick="registraPresenca"
            android:layout_below="@+id/bEvento"
            android:layout_alignParentLeft="true" />


</RelativeLayout>
